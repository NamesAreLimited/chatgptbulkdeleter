{
  "manifest_version": 3,
  "name": "ChatGPT Bulk Chat Deleter",
  "version": "2.5.3",
  "description": "Bulk-delete your ChatGPT chats",
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "minimum_chrome_version": "100",
  "homepage_url": "https://example.com/chatgpt-bulk-deleter",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}